Algoritmo "ex09"

Var
salario, trabalhos: inteiro

Inicio
      escreva("Digite quantos softwares foram vendidos: ")
      leia(trabalhos)
      
      salario <- 500 + (50 * trabalhos)
      
      escreva("O seu salário fixo é de R$ 500 e pagamos R$ 50 por software vendido,")
      escreva(" como você vendeu",trabalhos," software(s), o seu salário é R$",salario,".")

Fimalgoritmo