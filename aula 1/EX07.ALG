Algoritmo "ex07"

Var
nome: caractere
idade: inteiro
salario: real

Inicio
      escreva("Digite seu nome: ")
      leia (nome)
      escreva("Digite sua idade: ")
      leia(idade)
      escreva("Digite seu salário: ")
      leia(salario)
      
      escreva("Seu nome é ",nome,", você tem ",idade," anos e seu salário é R$ ",salario:6:2)


Fimalgoritmo