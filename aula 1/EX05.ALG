Algoritmo "ex05"

Var
idade, idade1, ano: inteiro


Inicio
      escreva("Digite o ano em que você nasceu: ")
      leia(ano)
      
      idade <- 2022 - ano
      idade1 <- idade - 1
      
      escreval("Se você nasceu antes de 21 de fevereiro de",ano,", você tem",idade," anos.")
      escreva("Se você nasceu depois de 21 de fevereiro de",ano,", você tem",idade1," anos.")

Fimalgoritmo